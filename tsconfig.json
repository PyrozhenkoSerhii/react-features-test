{
  "compilerOptions": {
    "outDir": "./build/",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "removeComments": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "types": ["node", "./src/@types"],
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "webpack/webpack.config.base.ts"
  ]
}
